{% extends 'index.html.twig' %}

{% block mainpanel %}
    {% include 'filemanager/filemanager_mainpanel.html.twig' %}
{% endblock %}

{% block content %}
    <div class="manager-wrapper">

        {% include 'filemanager/filemanager_content_right.html.twig' %}

        <div class="manager-left mg-t-27">
            {#<a href="" class="btn btn-contact-new" data-toggle="modal" data-target="#modaldemo1">Upload File</a>#}
            <button class="btn btn-block btn-contact-new" disabled>Upload File (off)</button>
            <!-- BASIC MODAL -->
            <div id="modaldemo1" class="modal fade">
                <div class="modal-dialog modal-dialog-vertical-center" role="document">
                    <div class="modal-content bd-0 tx-14">
                        <div class="modal-header">
                            <h6 class="tx-14 mg-b-0 tx-uppercase tx-inverse tx-bold">Upload file</h6>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>

                        <div class="modal-body pd-25">
                            {{ form_start(upload, {'action': path('fileManagerUpload'), 'method': 'post'}) }}
                            <div class="col mg-t-20">
                                <div class="custom-file">
                                    {{ form_row(upload.file, {'label': 'Choose file', 'label_attr': {'class': 'custom-file-label'}, 'attr': {'class': 'custom-file-input'}}) }}
                                </div><!-- custom-file -->
                            </div><!-- col -->
                        </div>

                        <div class="modal-footer">
                            <input type="submit" name="submit" class="btn btn-primary" value="Upload">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        </div>
                        {{ form_end(upload) }}
                    </div>
                </div><!-- modal-dialog -->
            </div><!-- modal -->

            <nav class="nav">

                {% for month in months %}
                    <a href="{{ path('fileManager', {'year': month.year, 'month': month.month, 'monthName': month.monthName}) }}" class="nav-link active">
                        <span>{{ month.monthName }} {{ month.year }}</span>
                    </a>
                {% endfor %}

            </nav>

        </div><!-- manager-left -->
    </div><!-- manager-wrapper -->

{% endblock %}

{% block jasvascript %}

    <script>
        $(function() {

            $('#link-filemanager').addClass('active');

        });
    </script>

{% endblock %}