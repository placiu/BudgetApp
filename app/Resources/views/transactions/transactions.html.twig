{% extends 'index.html.twig' %}

{% block mainpanel %}
    {% include 'transactions/mainpanel.html.twig' %}
{% endblock %}

{% block content %}
    {% include 'transactions/transactions_content.html.twig' %}
{% endblock %}

{% block jasvascript %}

    <script src="{{ asset('lib/datatables/js/jquery.dataTables.js') }}"></script>
    <script src="{{ asset('lib/datatables-responsive/js/dataTables.responsive.js') }}"></script>
    <script src="{{ asset('lib/select2/js/select2.min.js') }}"></script>
    <script src="{{ asset('lib/moment/js/moment.js') }}"></script>
    <script src="{{ asset('lib/jquery-ui/js/jquery-ui.js') }}"></script>

    <script>
        $(function(){
            'use strict';

            $('#link-transactions').addClass('active');

            $('#datatable2').DataTable({
                bLengthChange: false,
                searching: false,
                responsive: true
            });

            $('.select2').select2({
                minimumResultsForSearch: Infinity,
            });

            $('#select6').select2({
                containerCssClass: 'select2-full-color select2-primary',
                minimumResultsForSearch: Infinity // disabling search
            });

            $('.fc-datepicker').datepicker({
                showOtherMonths: true,
                selectOtherMonths: true
            });

        });
    </script>


{% endblock %}