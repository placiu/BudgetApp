<div id="modaledit-{{ id }}" class="modal fade effect-sign">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content tx-size-sm">
            <div class="modal-header pd-x-20">
                <h6 class="tx-14 mg-b-0 tx-uppercase tx-inverse tx-bold">Edit transaction</h6>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body pd-20">

                <form action="" method="post">

                    <div class="form-layout form-layout-2">
                        <div class="row no-gutters">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="form-control-label">Date</label>
                                    <input class="form-control" type="text" name="date" value="{{ transaction.date }}" placeholder="Enter date">
                                </div>
                            </div><!-- col-4 -->
                            <div class="col-md-4 mg-t--1 mg-md-t-0">
                                <div class="form-group mg-md-l--1">
                                    <label class="form-control-label">Type</label>
                                    <input class="form-control" type="text" name="type" value="{{ transaction.type }}" placeholder="Enter type">
                                </div>
                            </div><!-- col-4 -->
                            <div class="col-md-4 mg-t--1 mg-md-t-0">
                                <div class="form-group mg-md-l--1">
                                    <label class="form-control-label">Amount</label>
                                    <input class="form-control" type="number" step="0.01" name="amount" value="{{ transaction.amount }}" placeholder="Enter amount">
                                </div>
                            </div><!-- col-4 -->
                            <div class="col-md-4">
                                <div class="form-group bd-t-0-force">
                                    <label class="form-control-label">Recipient</label>
                                    <input class="form-control" type="text" name="recipient" value="{{ transaction.recipient }}" placeholder="Enter description">
                                </div>
                            </div><!-- col-8 -->
                            <div class="col-md-4">
                                <div class="form-group mg-md-l--1 bd-t-0-force">
                                    <label class="form-control-label">Description</label>
                                    <input class="form-control" type="text" name="description" value="{{ transaction.description }}" placeholder="Enter address">
                                </div>
                            </div><!-- col-8 -->
                            <div class="col-md-4">
                                <div class="form-group mg-md-l--1 bd-t-0-force">
                                    <label class="form-control-label mg-b-0-force">Budget</label>
                                    <select id="select2-a" name="budget" class="form-control" data-placeholder="Choose budget" required>
                                        <option label="Choose budget"></option>
                                        {% for budget in budgets %}
                                            <option value="{{ budget.id }}">{{ budget.name }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div><!-- col-4 -->
                        </div><!-- row -->

                    </div><!-- form-layout -->

            </div>
            <div class="modal-footer">
                <input type="hidden" name="transactionId" class="btn btn-primary" value="{{ id }}">
                <input type="submit" name="edit" class="btn btn-primary" value="Edit">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>

            </form>

        </div>
    </div>
</div>